                  <Insets />
               </VBox.margin>
            </ImageView>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="title-label" stylesheets="@../../../style/style.css" text="ลงทะเบียนผู้ใช้นิสิต">
